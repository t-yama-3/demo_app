<h4>サンプルアプリ</h4>

<% @notes.each do |note| %>
  <div class="note_name">
    投稿者：<%= note.user.name %>
  </div>
  <div class="note_body">
    <%= note.body %>
  </div>
  <% if user_signed_in? && note.user_id == current_user.id %>
  <div class="note_option">
    本人
    <%= link_to "削除", note_path(note.id), method: :delete %>
  </div>
  <% end %>
  <br />
<% end %>

<div class="form">
</div>
<% if user_signed_in? %>
  <%= form_with(model: @note, class: :note_form, local: true) do |form| %>
    <%= form.text_area :body, placeholder: :メモ, class: "note_form-text" %>
    <%= form.submit "メモを登録", class: "note_form-btn" %>
  <% end %>
<% end %>
