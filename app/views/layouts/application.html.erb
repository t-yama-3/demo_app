<!DOCTYPE html>
<html>
  <head>
    <title>DemoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%#= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "トップページ", root_path, class: :top_link %>
    <% if user_signed_in? %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "devise_btn" %>
      <span class="devise_user devise_user-label">ユーザ名:</span>
      <%= link_to current_user.name, "#", class: "devise_user devise_user-name" %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path, class: "devise_btn" %>
      <%= link_to "ログイン", new_user_session_path, class: "devise_btn" %>
    <% end %>
    <div>
      <%= yield %>
    </div>
  </body>
</html>
